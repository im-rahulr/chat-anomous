{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin-panel.html"
      },
      {
        "source": "/admin/**",
        "destination": "/admin-panel.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
} 